{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "$id": "urn:oasis:names:tc:xliff-omos:document:jliff:2.0",

  "$ref": "#/definitions/jliff",

  "definitions": {

    "jliff": {
      "description": "The JLIFF root object has a required jliff property with the JLIFF version and one of the properties: 1) files, 2) subfiles, or 3) subunits",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "jliff": { "type": "string", "enum": [ "2.0" ] },
            "@context": { "$ref": "#/definitions/JSON-LD-context" },
            "srcLang": { "$ref": "#/definitions/language" },
            "trgLang": { "$ref": "#/definitions/language" },
            "srcDir": { "$ref": "#/definitions/dir" },
            "trgDir": { "$ref": "#/definitions/dir" },
            "files": { "$ref": "#/definitions/files" }
          },
          "additionalProperties": false,
          "required": [ "jliff", "files" ]
        },
        {
          "properties": {
            "jliff": { "type": "string", "enum": [ "2.0" ] },
            "@context": { "$ref": "#/definitions/JSON-LD-context" },
            "srcLang": { "$ref": "#/definitions/language" },
            "trgLang": { "$ref": "#/definitions/language" },
            "srcDir": { "$ref": "#/definitions/dir" },
            "trgDir": { "$ref": "#/definitions/dir" },
            "subfiles": { "$ref": "#/definitions/subitems" }
          },
          "additionalProperties": false,
          "required": [ "jliff", "subfiles" ]
        },
        {
          "properties": {
            "jliff": { "type": "string" },
            "@context": { "$ref": "#/definitions/JSON-LD-context" },
            "srcLang": { "$ref": "#/definitions/language" },
            "trgLang": { "$ref": "#/definitions/language" },
            "srcDir": { "$ref": "#/definitions/dir" },
            "trgDir": { "$ref": "#/definitions/dir" },
            "subunits": { "$ref": "#/definitions/subunits" }
          },
          "additionalProperties": false,
          "required": [ "jliff", "subunits" ]
        }
      ]
    },

    "files": {
      "description": "An array of files",
      "type": "array",
      "items": { "$ref": "#/definitions/file" },
      "minItems": 1
    },

    "file": {
      "description": "A file with optional subfiles (an array of units and groups)",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "original": { "type": "string" },
        "skeleton": { "$ref": "#/definitions/skeleton" },
        "subfiles": { "$ref": "#/definitions/subitems" },
        "canResegment": { "type": "string", "enum": [ "yes", "no" ] },
        "translate": { "type": "string", "enum": [ "yes", "no" ] },
        "srcDir": { "$ref": "#/definitions/dir" },
        "trgDir": { "$ref": "#/definitions/dir" },
        "fs_fs": { "$ref": "#/definitions/fs_formatStyle" },
        "fs_subFs": { "$ref": "#/definitions/fs_subFormatStyle" },
        "mda_metadata": { "$ref": "#/definitions/mda_metadata" },
        "res_resourceData": { "$ref": "#/definitions/res_resourceData" },
        "ctr_changeTrack": { "$ref": "#/definitions/ctr_changeTrack" },
        "slr_profiles": { "$ref": "#/definitions/slr_profiles" },
        "slr_data": { "$ref": "#/definitions/slr_data" },
        "slr_storageRestriction": { "$ref": "#/definitions/slr_storageRestriction" },
        "slr_sizeRestriction": { "$ref": "#/definitions/slr_sizeRestriction" },
        "slr_sizeInfo": { "$ref": "#/definitions/slr_sizeInfo" },
        "slr_sizeInfoRef": { "$ref": "#/definitions/slr_sizeInfoRef" },
        "val_validation": { "$ref": "#/definitions/val_validation" },
        "userdata": { "$ref": "#/definitions/extensionsData" }
      },
      "additionalProperties": false,
      "required": [ "id" ]
    },

    "skeleton": {
      "type": "object",
      "properties": {
        "ref": { "$ref": "#/definitions/IRI" }
      },
      "additionalProperties": false,
      "required": [ "ref" ]
    },

    "subitems": {
      "description": "An array of units and groups",
      "type": "array",
      "items": { "$ref": "#/definitions/subitem" },
      "minItems": 1
    },

    "subitem": {
      "description": "A subitem is one of: 1) unit or 2) group, as specified by the kind property, defaults to unit",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "id": { "$ref": "#/definitions/NMTOKEN" },
            "kind": { "type": "string", "enum": [ "unit" ] },
            "name": { "type": "string" },
            "canResegment": { "type": "string", "enum": [ "yes", "no" ], "default": "yes" },
            "translate": { "type": "string", "enum": [ "yes", "no" ] },
            "srcDir": { "$ref": "#/definitions/dir" },
            "trgDir": { "$ref": "#/definitions/dir" },
            "type": { "$ref": "#/definitions/type" },
            "notes": { "$ref": "#/definitions/notes" },
            "subunits": { "$ref": "#/definitions/subunits" },
            "originalData": { "$ref": "#/definitions/originalData" },
            "mtc_matches": { "$ref": "#/definitions/mtc_translationCandidates" },
            "gls_glossary": { "$ref": "#/definitions/gls_glossary" },
            "fs_fs": { "$ref": "#/definitions/fs_formatStyle" },
            "fs_subFs": { "$ref": "#/definitions/fs_subFormatStyle" },
            "mda_metadata": { "$ref": "#/definitions/mda_metadata" },
            "res_resourceData": { "$ref": "#/definitions/res_resourceData" },
            "ctr_changeTrack": { "$ref": "#/definitions/ctr_changeTrack" },
            "slr_profiles": { "$ref": "#/definitions/slr_profiles" },
            "slr_data": { "$ref": "#/definitions/slr_data" },
            "slr_storageRestriction": { "$ref": "#/definitions/slr_storageRestriction" },
            "slr_sizeRestriction": { "$ref": "#/definitions/slr_sizeRestriction" },
            "slr_sizeInfo": { "$ref": "#/definitions/slr_sizeInfo" },
            "slr_sizeInfoRef": { "$ref": "#/definitions/slr_sizeInfoRef" },
            "val_validation": { "$ref": "#/definitions/val_validation" },
            "userdata": { "$ref": "#/definitions/extensionsData" }
          },
          "additionalProperties": false,
          "required": [ "id", "kind", "subunits" ]
        },
        {
          "properties": {
            "id": { "$ref": "#/definitions/NMTOKEN" },
            "kind": { "type": "string", "enum": [ "group" ] },
            "name": { "type": "string" },
            "canResegment": { "type": "string", "enum": [ "yes", "no" ], "default": "yes" },
            "translate": { "type": "string", "enum": [ "yes", "no" ] },
            "srcDir": { "$ref": "#/definitions/dir" },
            "trgDir": { "$ref": "#/definitions/dir" },
            "type": { "$ref": "#/definitions/type" },
            "notes": { "$ref": "#/definitions/notes" },
            "subgroups": { "$ref": "#/definitions/subitems" },
            "mda_metadata": { "$ref": "#/definitions/mda_metadata" },
            "res_resourceData": { "$ref": "#/definitions/res_resourceData" },
            "ctr_changeTrack": { "$ref": "#/definitions/ctr_changeTrack" },
            "slr_profiles": { "$ref": "#/definitions/slr_profiles" },
            "slr_data": { "$ref": "#/definitions/slr_data" },
            "slr_storageRestriction": { "$ref": "#/definitions/slr_storageRestriction" },
            "slr_sizeRestriction": { "$ref": "#/definitions/slr_sizeRestriction" },
            "slr_sizeInfo": { "$ref": "#/definitions/slr_sizeInfo" },
            "slr_sizeInfoRef": { "$ref": "#/definitions/slr_sizeInfoRef" },
            "val_validation": { "$ref": "#/definitions/val_validation" },
            "userdata": { "$ref": "#/definitions/extensionsData" }
          },
          "additionalProperties": false,
          "required": [ "id", "kind" ]
        }
      ]
    },

    "subunits": {
      "description": "An array of subunits (an array of segment and ignorable)",
      "type": "array",
      "items": { "$ref": "#/definitions/subunit" },
      "minItems": 1
    },

    "subunit": {
      "description": "A subunit is one of: 1) a segment or 2) ignorable, as specified by kind, defaults to segment",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "id": { "$ref": "#/definitions/NMTOKEN" },
            "kind": { "type": "string", "enum": [ "segment" ] },
            "canResegment": { "type": "string", "enum": [ "yes", "no" ] },
            "state": { "type": "string", "enum": [ "initial", "translated", "reviewed", "final" ], "default": "initial" },
            "subState": { "type": "string", "pattern": "^.*:.*$" },
            "source": { "$ref": "#/definitions/elements" },
            "target": { "$ref": "#/definitions/elements" }
          },
          "additionalProperties": false,
          "required": [ "kind", "source" ]
        },
        {
          "properties": {
            "id": { "$ref": "#/definitions/NMTOKEN" },
            "kind": { "type": "string", "enum": ["ignorable"] },
            "source": { "$ref": "#/definitions/elements" },
            "target": { "$ref": "#/definitions/elements" }
          },
          "additionalProperties": false,
          "required": [ "kind", "source" ]
        }
      ]
    },

    "originalData": {
      "type": "object",
      "patternProperties": { "^.*$": { "type": "string" } },
      "additionalProperties": false
    },

    "mtc_translationCandidates": {
      "description": "The translationCandidates module provides a capability to store lists of possible translations along with information about the similarity of the match, the quality of the translation, its provenance, etc.",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "type": { "$ref": "#/definitions/type", "enum": [ "mtc:match" ] },
        "ref": { "$ref": "#/definitions/NMTOKEN" },
        "translate": { "type": "string", "enum": [ "yes", "no" ] },
        "matches": {
          "type": "array",
          "items": { "$ref": "#/definitions/mtc_translationCandidatesMatch" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },

    "mtc_translationCandidatesMatch": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "ref": { "$ref": "#/definitions/IRI" },
        "matchQuality": { "type": "number", "minimum": 0, "maximum": 100 },
        "matchSuitability": { "type": "number", "minimum": 0, "maximum": 100 },
        "origin": { "type": "string" },
        "reference": { "type": "string", "enum": [ "yes", "no" ], "default": "no" },
        "similarity": { "type": "number", "minimum": 0, "maximum": 100 },
        "subType": { "type": "string" },
        "type": { "type": "string", "enum": [ "am", "mt", "icm", "idm", "tb", "tm", "other" ], "default": "tm" },
        "source": { "$ref": "#/definitions/elements" },
        "target": { "$ref": "#/definitions/elements" },
        "originalData": { "$ref": "#/definitions/originalData" },
        "mda_metadata": { "$ref": "#/definitions/mda_metadata" }
      },
      "additionalProperties": true,
      "required": [ "ref", "source", "target" ]
    },

    "gls_glossary": {
      "description": "The glossary module: simple glossaries, consisting of a list of terms with a definition or translation",
      "type": "array",
      "items": { "$ref": "#/definitions/gls_glossEntry" }
    },

    "gls_glossEntry": {
      "type": "object",
      "properties": {
        "ref": { "$ref": "#/definitions/IRI" },
        "term": {
          "type": "object",
          "ref": "#/definitions/gls_glossEntryData"
        },
        "definition": {
          "type": "object",
          "ref": "#/definitions/gls_glossEntryData"
        },
        "translations": {
          "type": "array",
          "items": { 
            "type": "object",
            "properties": {
              "id": { "$ref": "#/definitions/NMTOKEN" },
              "ref": { "$ref": "#/definitions/IRI" },
              "text": { "type": "string" },
              "source": { "type": "string" }
            },
            "additionalProperties": true,
            "required": [ "text" ]
          },
          "minItems": 1
        }
      },
      "additionalProperties": true,
      "required": [ "term" ]
    },

    "gls_glossEntryData": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "source": { "type": "string" }
      },
      "additionalProperties": true,
      "required": [ "text" ]
    },

    "fs_formatStyle": {
      "description": "The formatStyle module: fs attribute; this module is intended to carry information needed for generating a quick glance HTML preview of JLIFF content using a predefined set of simple HTML formatting elements",
      "type": "string",
      "enum": [ "a", "b", "bdo", "big", "blockquote", "body", "br", "button", "caption", "center", "cite", "code", "col", "colgroup", "dd", "del", "div", "dl", "dt", "em", "h1", "h2", "h3", "h4", "h5", "h6", "head", "hr", "html", "i", "img", "label", "legend", "li", "ol", "p", "pre", "q", "s", "samp", "select", "small", "span", "strike", "strong", "sub", "sup", "table", "tbody", "td", "tfoot", "th", "thead", "title", "tr", "tt", "u", "ul" ]
    },

    "fs_subFormatStyle": {
      "description": "The formatStyle module: subFs attribute; this module is intended to carry information needed for generating a quick glance HTML preview of JLIFF content using a predefined set of simple HTML formatting elements",
      "type": "string"
    },

    "mda_metadata": {
      "description": "The metadata module: provides a mechanism for storing custom metadata",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "metaGroups": {
          "type": "array",
          "items": { "$ref": "#/definitions/mda_metaGroup" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },

    "mda_metaGroup": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "appliesTo": { "type": "string", "enum": [ "source", "target", "ignorable" ] },
        "category": { "type": "string" },
        "meta": { 
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "value": { "type": "string" }
                },
                "additionalProperties": false
              },
              { "$ref": "#/definitions/mda_metaGroup" }
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [ "meta" ]
    },

    "res_resourceData": {
      "description": "The resourceData module: provides a mechanism for referencing external resource data that MAY need to be modified or used as contextual reference during translation",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "resourceItemRefs": {
          "type": "array",
          "items": { "$ref": "#/definitions/res_resourceItemRef" },
          "minItems": 1
        },
        "resourceItems": {
          "type": "array",
          "items": { "$ref": "#/definitions/res_resourceItem" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },

    "res_resourceItemRef": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "ref": { "$ref": "#/definitions/NMTOKEN" }
      },
      "additionalProperties": false,
      "required": [ "ref" ]
    },

    "res_resourceItem": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "mimeType": { "type": "string" },
        "context": { "type": "string", "enum": [ "yes", "no" ], "default": "yes" },
        "source": {
          "type": "object",
          "properties": {
            "href": { "type": "string" },
            "lang": { "$ref": "#/definitions/language" }
          },
          "additionalProperties": true
        },
        "target": {
          "type": "object",
          "properties": {
            "href": { "type": "string" },
            "lang": { "$ref": "#/definitions/language" }
          },
          "additionalProperties": true
        },
        "references": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "href": { "type": "string" },
              "lang": { "$ref": "#/definitions/language" }
            },
            "additionalProperties": true,
            "required": [ "href" ]
          }
        }
      },
      "additionalProperties": true
    },

    "ctr_changeTrack": {
      "description": "The changeTrack module is used to store revision information",
      "type": "object",
      "properties": {
        "revisions": {
          "type": "array",
          "items": { "$ref": "#/definitions/ctr_changeTrackRevisions" },
          "minItems": 1
        }
      },
      "additionalProperties": false,
      "required": [ "revisions" ]
    },

    "ctr_changeTrackRevisions": {
      "type": "object",
      "properties": {
        "appliesTo": { "$ref": "#/definitions/NMTOKEN" },
        "ref": { "$ref": "#/definitions/NMTOKEN" },
        "currentVersion": { "$ref": "#/definitions/NMTOKEN" },
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/ctr_changeTrackRevisionItem" },
          "minItems": 1
        }
      },
      "additionalProperties": true,
      "required": [ "appliesTo" ]
    },

    "ctr_changeTrackRevisionItem": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "dateTime": { "type": "string" },
        "version": { "$ref": "#/definitions/NMTOKEN" },
        "item": { "$ref": "#/definitions/ctr_changeTrackRevisionItemText" }
      },
      "additionalProperties": true
    },

    "ctr_changeTrackRevisionItemText": {
      "type": "object",
      "properties": {
        "property": { "type": "string" },
        "text": { "type": "string" }
      },
      "additionalProperties": true,
      "required": [ "property", "text" ]
    },

    "slr_profiles": {
      "description": "The Size and Length Restriction module provides a mechanism to annotate the XLIFF content with information on storage and general size restrictions",
      "type": "object",
      "properties": {
        "generalProfile": { "type": "string" },
        "storageProfile": { "type": "string" },
        "normalization": {
          "type": "object",
          "properties": {
            "general": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "storage": { "type": "string", "enum": [ "none", "nfc", "nfd" ] }
          }
        }
      },
      "additionalProperties": true
    },

    "slr_data": {
      "type": "object",
      "properties": {
         "profile": { "type": "string" }
      },
      "additionalProperties": true,
      "required": [ "profile" ]
    },

    "slr_storageRestriction": {
      "type": "string"
    },

    "slr_sizeRestriction": {
      "type": "string"
    },

    "slr_equivStorage": {
      "type": "string"
    },

    "slr_sizeInfo": {
      "type": "string"
    },

    "slr_sizeInfoRef": {
      "$ref": "#/definitions/NMTOKEN"
    },

    "val_validation": {
      "description": "The validation module defines a specific set of validation rules that can be applied to target text both globally and locally",
      "type": "array",
      "items": { "$ref": "#/definitions/val_validationRule" },
      "minItems": 1
    },

    "val_validationRule": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "isPresent": { "type": "string" },
            "occurs": { "type": "integer", "minimum": 1 },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "isNotPresent": { "type": "string" },
            "occurs": { "type": "integer", "minimum": 1 },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "occurs": { "type": "integer", "minimum": 1 },
            "startsWith": { "type": "string" },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "occurs": { "type": "integer", "minimum": 1 },
            "endsWith": { "type": "string" },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        }
      ],
      "additionalProperties": true
    },

    "extensionsData": {
      "description": "An object that maps an extension's fully qualified name to the extension data comprising an unconstrained object",
      "type": "object",
      "patternProperties": { "^[-.:_A-Za-z0-9]+$": { "type": "object" } },
      "additionalProperties": false
    },

    "notes": {
      "type": "array",
      "items": { "$ref": "#/definitions/note" },
      "minItems": 1
    },

    "note": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "appliesTo": { "type": "string", "enum": [ "source", "target" ] },
        "category": { "type": "string" },
        "priority": { "type": "integer", "minimum": 1, "maximum": 10 },
        "fs_fs": { "$ref": "#/definitions/fs_formatStyle" },
        "fs_subFs": { "$ref": "#/definitions/fs_subFormatStyle" }
      },
      "additionalProperties": false
    },

    "elements": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/element-text" },
          { "$ref": "#/definitions/element-ph" },
          { "$ref": "#/definitions/element-sc" },
          { "$ref": "#/definitions/element-ec" },
          { "$ref": "#/definitions/element-sm" },
          { "$ref": "#/definitions/element-em" }
        ]
      }
    },

    "element-text": {
      "type": "object",
      "properties": {
        "text": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [ "text" ]
    },

    "element-ec": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": [ "ec" ] },
        "startRef": { "$ref": "#/definitions/NMTOKEN" },
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "canCopy": { "type": "string", "enum": [ "yes", "no" ] },
        "canDelete": { "type": "string", "enum": [ "yes", "no" ] },
        "canOverlap": { "type": "string", "enum": [ "yes", "no" ] },
        "canReorder": { "type": "string", "enum": [ "yes", "no", "firstNo" ], "default": "yes" },
        "copyOf": { "$ref": "#/definitions/NMTOKEN" },
        "disp": { "type": "string" },
        "equiv": { "type": "string" },
        "dataRef": { "$ref": "#/definitions/NMTOKEN" },
        "subFlows": { "type": "string" },
        "subType": { "type": "string" },
