        "its_taIdent": { "type": "string" },
        "its_taIdentRef": { "$ref": "#/definitions/IRI" },
        "its_domains": { "$ref": "#/definitions/its_domains" }
      },
      "additionalProperties": true,
      "required": [ "id", "kind" ]
    },

    "dir": {
      "type": "string",
      "enum": [ "ltr", "rtl", "auto" ]
    },

    "type": {
      "type": "string",
      "pattern": "^.+:.+$"
    },

    "codeType": {
      "type": "string",
      "enum": [ "fmt", "ui", "quote", "link", "image", "its:generic", "other" ]
    },

    "mrkType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [ "generic", "comment", "term", "its-term-no" ],
          "default": "generic"
        },
        {
          "type": "string",
          "pattern": "^.+:.+$"
        }
      ]
    },

    "JSON-LD-context": {
      "description": "An embedded JSON-LD-context with prefix-name pairs to resolve colon-prefixed extensions",
      "type": "object",
      "patternProperties": { "^[-._A-Za-z0-9]+$": { "type": "string" } },
      "additionalProperties": false
    },

    "NCName": {
      "description": "XSD NCName type for XLIFF interoperability",
      "type": "string",
      "pattern": "^[_A-Za-z][-._A-Za-z0-9]*$"
    },

    "NMTOKEN": {
      "description": "XSD NMTOKEN type for XLIFF interoperability, the type of id properties",
      "type": "string",
      "pattern": "^[-._:A-Za-z0-9]+$"
    },

    "NMTOKENS": {
      "description": "List of XSD NMTOKEN separated by spaces for XLIFF interoperability",
      "type": "string",
      "pattern": "^([-._:A-Za-z0-9]+[ ]+)*[-._:A-Za-z0-9]+$"
    },

    "IRI": {
      "description": "IRI type for XLIFF interoperability",
      "type": "string"
    },

    "language": {
      "description": "A language code as described in IETF BCP 47",
      "type": "string"
    }

  }

}
