    "val_validation": {
      "description": "The validation module defines a specific set of validation rules that can be applied to target text both globally and locally",
      "type": "array",
      "items": { "$ref": "#/definitions/val_rule" },
      "minItems": 1
    },

    "val_rule": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "val_isPresent": { "type": "string" },
            "val_occurs": { "type": "integer", "minimum": 1 },
            "val_existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "val_caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "val_normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "val_disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "val_isNotPresent": { "type": "string" },
            "val_occurs": { "type": "integer", "minimum": 1 },
            "val_existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "val_caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "val_normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "val_disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "val_occurs": { "type": "integer", "minimum": 1 },
            "val_startsWith": { "type": "string" },
            "val_existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "val_caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "val_normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "val_disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "val_occurs": { "type": "integer", "minimum": 1 },
            "val_endsWith": { "type": "string" },
            "val_existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "val_caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "val_normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "val_disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        }
      ],
      "additionalProperties": false
    },

    "its_provenanceRecords": {
      "description": "An array of standoff wrapper objects with an id and an array to group any number of single Provenance Record elements related to the same span of source or target content",
